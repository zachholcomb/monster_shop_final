<h1>Create Review for <%= link_to @item.name, "/items/#{@item.id}" %></h1>
<section class="form">
  <%= form_tag "/items/#{@item.id}/reviews", method: :post do %>

    <%= label_tag :title %>
    <%= text_field_tag :title %>

    <%= label_tag :content %>
    <%= text_field_tag :content %>

    <%= label_tag :rating%>
    <%= text_field_tag :rating%>

    <%= submit_tag 'Create Review' %>
  <% end %>
</section>
